<?xml version="1.0" encoding="UTF-8"?> 
<?import javafx.scene.control.*?> 
<?import javafx.scene.layout.*?> 
<?import javafx.geometry.Insets?> <!-- Import Insets class -->

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AuthController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="Email" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label text="Password" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Button fx:id="loginButton" text="Login" GridPane.rowIndex="2" GridPane.columnIndex="1" onAction="#handleLogin" />
</GridPane>

